<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:dividerPadding="8dp"
    android:showDividers="none"
    android:divider="@null"
    android:animateLayoutChanges="true">

    <ImageButton
        android:id="@+id/button_date_meta_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_schedule_black_18dp"
        android:layout_margin="8dp" />

    <ImageButton
        android:id="@+id/button_checklist_meta_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_format_list_bulleted_black_24dp" />


    <ImageButton
        android:id="@+id/button_deadline_meta_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_event_black_18dp" />


    <!--    either change color or change to outline; too overpowering-->
    <ImageButton
        android:id="@+id/button_list_meta_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:background="@drawable/ic_all_inbox_black_18dp" />

    <ImageButton
        android:id="@+id/button_tags_meta_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_label_black_24dp"
        android:layout_margin="8dp"/>

</LinearLayout>